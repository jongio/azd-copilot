---
import SharedLayout from '@jongio/azd-web-core/components/Layout.astro';
import Header from '@jongio/azd-web-core/components/Header.astro';
import Footer from '@jongio/azd-web-core/components/Footer.astro';
import SuiteNav from '@jongio/azd-web-core/components/SuiteNav.astro';
import AnimatedBackground from './AnimatedBackground.astro';

interface Props {
  title: string;
  description?: string;
  variant?: 'landing' | 'docs';
}

const { title, description = 'GitHub Copilot integration for Azure Developer CLI', variant = 'landing' } = Astro.props;

const fullTitle = title === 'Home' ? 'azd copilot | AI-Powered Azure Development' : `${title} | azd copilot`;

const navLinks = [
  { label: 'Getting Started', href: '/azd-copilot/getting-started/' },
  { label: 'Agents', href: '/azd-copilot/agents/' },
  { label: 'Reference', href: '/azd-copilot/reference/cli/' },
];
---

<SharedLayout
  title={fullTitle}
  description={description}
  extensionName="copilot"
  ogImage="https://jongio.github.io/azd-copilot/og-image.png"
  publishedDate="2026-02-09T23:50:16Z"
>
  <Fragment slot="head">
    <link rel="icon" type="image/svg+xml" href="/azd-copilot/favicon.svg" />
  </Fragment>

  <SuiteNav
    currentExtension="copilot"
    hubUrl="https://jongio.github.io/azd-extensions/"
  />

  <Header
    extensionName="copilot"
    navLinks={navLinks}
    githubUrl="https://github.com/jongio/azd-copilot"
    hubUrl="https://jongio.github.io/azd-extensions/"
  />

  <AnimatedBackground />

  <main class="main-content">
    <slot />
  </main>

  <Footer
    extensionName="copilot"
    githubUrl="https://github.com/jongio/azd-copilot"
    hubUrl="https://jongio.github.io/azd-extensions/"
  />
</SharedLayout>

<style is:global>
  @import "../styles/global.css";
</style>

<style>
  .main-content {
    flex: 1;
    min-height: 0;
  }
</style>
